<div class="custom-hero">

  <div class="custom-hero__media custom-hero__media--1">
    {% if section.settings.media_type_1 == 'image' and section.settings.image_1 != blank %}
      <img 
        src="{{ section.settings.image_1 | image_url: width: 2000 }}" 
        alt="Hero Media 1" 
        loading="lazy">
    {% elsif section.settings.media_type_1 == 'video' and section.settings.video_1 != blank %}
      {{ section.settings.video_1 | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
    {% else %}
      <img 
        src="{{ 'img-media-1.png' | asset_url }}" 
        alt="Default Hero Media 1" 
        loading="lazy">
    {% endif %}
  </div>

  <div class="custom-hero__inner">
    
    <div
  class="hero__content-wrapper
    layout-panel-flex
    layout-panel-flex--{{ section.settings.content_direction }}
    {{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    {% if section.settings.vertical_on_mobile %}mobile-column{% endif %}
    {% if request.design_mode %}hero__content-wrapper--design-mode{% endif %}"
    
  style="{% render 'layout-panel-style', settings: section.settings %}
    padding-block-start: {{ section.settings.padding-block-start }}px;
    padding-block-end: {{ section.settings.padding-block-end }}px;
    "
>
  {% for block in section.blocks %}
    {% render block %}
  {% endfor %}
</div>


    <div class="custom-hero__media custom-hero__media--2">
      {% if section.settings.media_type_2 == 'image' and section.settings.image_2 != blank %}
        <img 
          src="{{ section.settings.image_2 | image_url: width: 2000 }}" 
          alt="Hero Media 2" 
          loading="lazy">
      {% elsif section.settings.media_type_2 == 'video' and section.settings.video_2 != blank %}
        {{ section.settings.video_2 | video_tag: autoplay: true, loop: true, muted: true, playsinline: true }}
      {% else %}
        <img 
          src="{{ 'img-media-2.png' | asset_url }}" 
          alt="Default Hero Media 2" 
          loading="lazy">
      {% endif %}
    </div>

  </div>
</div>



{% schema %}
{
  "name": "Custom Hero",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "text"
    },
    {
      "type": "button"
    },
    {
      "type": "custom-button"
    },
    {
      "type": "logo"
    },
    {
      "type": "jumbo-text"
    },
    {
      "type": "spacer"
    },
    {
      "type": "group"
    },
    {
      "type": "_marquee"
    }
  ],
  "disabled_on": {
    "groups": ["header"]
  },
