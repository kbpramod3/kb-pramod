    },
    {
      "name": "t:names.hero_marquee",
      "category": "t:categories.banners",
      "blocks": {
        "spacer": {
          "type": "spacer",
          "settings": {
            "size": "pixel",
            "pixel_size": 24
          }
        },
        "marquee": {
          "type": "_marquee",
          "blocks": {
            "text": {
              "type": "text",
              "settings": {
                "text": "<p>Explore our latest products.</p>",
                "type_preset": "h1"
              }
            }
          },
          "block_order": ["text"]
        },
        "button": {
          "type": "button",
          "settings": {
            "label": "Shop Now",
            "link": "shopify://collections/all"
          }
        }
      },
      "block_order": ["spacer", "marquee", "button"]
    }
  ]
}
{% endschema %}

{% stylesheet %}

.custom-hero__media--1 {
  width: 100%;
}

.custom-hero__media--1 img,
.custom-hero__media--1 video {
  width: 100%;
  height: auto;
  display: block;
}

.custom-hero__inner {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.hero__content-wrapper,
.custom-hero__media--2 {
  flex: 1 1 50%;
  min-width: 50%;
}

.custom-hero__media--2 img,
.custom-hero__media--2 video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

{% endstylesheet %}
