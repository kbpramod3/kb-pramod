{%- doc -%}
  Custom Button with Arrow
  @param {string} link - The URL
  @param {object} [block] - The block settings
{%- enddoc -%}

{% assign block_settings = block.settings %}

<a
  {% if link == blank %}
    role="link"
    aria-disabled="true"
  {% else %}
    href="{{ link }}"
  {% endif %}
  class="
    custom-btn
    {{ block_settings.style_class }}
    {{ block_settings.style_class }}--{{ block.id }}
  "
  style="{% render 'size-style', settings: block_settings %}"
  {%- if block_settings.open_in_new_tab -%}
    target="_blank"
    rel="noopener noreferrer"
  {%- endif -%}
  {{ block.shopify_attributes }}
>
  <span>{{ block_settings.label }}</span>

  {% if block_settings.arrow != blank %}
    <img 
      src="{{ block_settings.arrow | img_url: '50x' }}" 
      alt="arrow" 
      class="arrow-img"
    />
  {% else %}
    <img 
      src="{{ 'arrow.svg' | asset_url }}" 
      alt="arrow" 
      class="arrow-img"
    />
  {% endif %}
</a>

{% stylesheet %}
  .custom-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: #fff04c;
    color: #000;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .custom-btn:hover {
    background-color: #ffe933;
  }

  .arrow-img {
    width: 20px;
    transition: transform 0.3s ease;
  }

  .custom-btn:hover .arrow-img {
    transform: translateX(4px);
  }
{% endstylesheet %}
